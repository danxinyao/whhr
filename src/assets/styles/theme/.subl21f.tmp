// 页头
.head .top {
    background: @headtop-bg-color;
    border-bottom: 1px @headtop-border-color solid;
}

.head .top .wel {
    color: @second-color;
    height: 30px;
    line-height: 30px;
    font-size: 12px;
}

.head .top li {
    height: 30px;
    line-height: 30px;
    font-size: 12px;
    float: left;
}

.head .top li a {
    color: @second-color;
    padding: 0 15px;
}

.head .menu {
    border-bottom: 2px @headmenu-border-color solid;
}

.head .logo {
    width: 377px;
    height: 50px;
    position: relative;
    margin-top: 20px;
}

.head .menu li {
    height: 90px;
    line-height: 90px;
    font-size: 16px;
    float: left;
}

.head .menu li a {
    color: @base-color;
    padding: 0 26px;
}

.head .menu li.active a, .head .top li a:hover, .head .menu li a:hover {
    color: @primary-color;
}

.head .top li:last-child a, .head .menu li:last-child a {
    padding-right: 0; 
}

//页尾
.foot {
    background: @base-color;
}

.foot ul {
    width: 850px;
    margin: 0 auto;
}

.foot li {
    height: 50px;
    line-height: 50px;
    float: left;
    font-size: 12px;
}

.foot li a {
    color: @white-color;
    opacity: 0.7;
    padding: 0 10px;
    border-right: @white-color 2px solid;
}

.foot li:last-child a {
    border-right: 0;
}

.foot .copyright, .foot .address {
    color: @white-color;
    opacity: 0.6;
    font-size: 12px;
    text-align: center;
}

.foot .address {
    padding-top: 6px;
    padding-bottom: 20px;
}
//designer-list
.designer{
    li{
        box-sizing: border-box;
        width: 284px;
        float: left;
        margin-right:18px;
        margin-bottom:30px;
        a{
            /* border: 1px solid red; */
            position: relative;
            overflow: hidden;  
            .img{
                width: 100%;
            }
            .index{
                display: block;
                width: 52px;
                height: 30px;
                position: absolute;
                right:10px;
                bottom:90px;
                border-radius:15px;
                /* opacity: 0.4; */
                text-align: center;
                line-height: 30px;
                font-size: 12px;
                corlor:#fff; 
                background-color: rgba(0,0,0,0.5); 
                border: 1px solid #f2f2f2; 
            }
                .touxiang{
                    box-sizing: border-box;
                    height: 80px;
                    padding-top:16px;
                    padding-left:20px;
                    padding-bottom: 16px;
                    border: 1px solid #f2f2f2;
                .tou{
                    width: 50px;
                    height: 50px;
                    border-radius: 25px;
                    float: left;
                    overflow: hidden;
                }
                .des{
                    margin-left: 22px;
                    float:left;
                    line-height: 1.5;
                    .name{
                        font-size:14px;
                        color:#333333; 
                    }
                    .style{
                    font-size: 12px;
                    color: #999999;
                    }                
                }
            }          

        }
        &:hover{
             border: 1px solid  @primary-color; 

        }
        


    }
    /* &:nth-child(4n){
        margin-right:0;
    } */
}
//控制第四个li的右边距为0
.designer li:nth-child(4n){
    margin-right:0;
} 
