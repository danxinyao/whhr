//设计师详情页detail
.detail{
    .detail_des{ 
        .des_big{
            margin:auto;
            width: 770px;
            height: 520px;
            margin-top: 30px;
            margin-bottom: 30px;
            img{
                width: 100%;
            }
        }
        .des_small{
            padding:14px 55px;
            position: relative;
            background-color: #f2f2f2;
            font-size: 30px;
            color: #bababa;
            .before{
                position: absolute;
                top:0px;
                left:0px;
                color: @primary-color;
                display: inline-block;
                width: 55px;
                height: 100px;
                line-height: 100px;
                text-align: center;
            }
            ul{
                li{
                    width: 72px;
                    height: 72px;
                    float: left;
                    margin-right: 11px;
                    img{
                        width: 100%;

                    }
                }
                &:nth-last-child(1){
                    margin-right:0;
                }
            }
            .after{
                position: absolute;
                top:0px;
                right:0px;
                display: inline-block;
                width: 55px;
                height: 100px;
                text-align: center;
                line-height: 100px;
                color:#bababa ;

            }
        }
        .des_collect{
            height: 30px;
            margin-top: 20px;
            margin-bottom: 20px;
            .left{
                float: left;
                ul{
                    li{
                        margin-right: 20px;
                        float:left;
                        a{
                            border: 1px solid @step-line-color;
                            padding-left: 40px;
                            box-sizing: border-box;
                            width: 110px;
                            height: 36px;
                            display: block;
                            border-radius: 18px;
                            color:#333333;
                            text-align: center;
                            line-height: 36px;
                            background-image: url(../../../assets/images/detail_sprict.jpg);
                            background-origin: border-box;
                            background-repeat: no-repeat;

                            p{
                                line-height: 36px;
                                height: 36px;
                                margin-top:0;
                                margin-bottom: 0;
                                font-size: 14px;
                                span{

                                }
                            }
                        }

                    }
                    
                }
            }
            .right{
                float:right;
                ul{
                    li{
                        float:left;
                        line-height: 30px;
                        margin-left: 10px;
                        color: @step-line-color;
                        a{
                            width: 30px;
                            height: 30px;
                            display: block;
                            border-radius: 50%;

                        }
                    }
                    
                }
            }
        }
    }
}
.detail .des_collect .right li:nth-child(2) a{
    background:url(../../../assets/images/detail_sprict.jpg)no-repeat 0 0px;
}
.detail .des_collect .right li:nth-child(3) a{
    background:url(../../../assets/images/detail_sprict.jpg)no-repeat 0 -33px;
}
.detail .des_collect .right li:nth-child(4) a{
    background:url(../../../assets/images/detail_sprict.jpg)no-repeat 0 -64px;
}


